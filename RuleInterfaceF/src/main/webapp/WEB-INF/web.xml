<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Servlets -->
<servlet>
    <servlet-name>ruleInterface</servlet-name>
    <servlet-class>de.l3s.forgetit.server.RuleServicesImpl</servlet-class>
</servlet>
  
<servlet-mapping>
    <servlet-name>ruleInterface</servlet-name>
    <url-pattern>/RuleInterface/rules</url-pattern>
</servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>RuleInterface.html</welcome-file>
  </welcome-file-list>

</web-app>
